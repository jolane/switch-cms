input-height = 2em
left-padding = 1em
bg-color = #f6f6f6
.Select
	width 100%
	height input-height
	background-color bg-color
	position relative
	margin-top 1em

	&-label
		position absolute
		z-index 0
		top 0
		left left-padding
		height input-height
		line-height input-height
		display block
		padding 0
		margin 0
		font-size 1em
		background-color transparent
		opacity 0.75
		transition all 0.2s
		~/.is-populated &
		*:focus + &
			top -0.7em
			line-height 0.6em
			font-size 0.6em
			left (left-padding * 1.6)

	&-input
		box-sizing border-box
		width 100%
		margin 0
		padding 0
		text-indent 0
		padding 0 0 0 left-padding
		position relative
		z-index 1
		height input-height
		line-height input-height
		background-color transparent
		font-size 1em
		border 0
		appearance none

	&-arrow
		position absolute
		right 0.2em
		top 0.2em
		height (input-height - 0.4)
		width (input-height - 0.4)
		background-color darken(bg-color, 20%)
		z-index 0
		&:after
			content ''
			display block
			height 30%
			width 30%
			border-bottom 1px solid currentColor
			border-left 1px solid currentColor
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -75%) rotate(-45deg)
