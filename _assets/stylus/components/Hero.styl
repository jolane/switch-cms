.Hero
	width 100%
	position relative
	display block

	&-bg
		display block
		width 100%
		& img
			display block
			width 100%
			^[0]--fullscreen &
				height 100vh
				width 100%
				object-fit cover

	&-content
		position absolute
		top headerHeight
		left 0
		height 'calc(100% - %s)' % headerHeight
		width 100%
		z-index 1
		display flex
		flex-direction column
		justify-content center
		text-align center
		align-items center

	&-title
		width 100%
		text-align center
		color white
		font-weight ExtraLight
		font-size 6rem
		font-size 6.5vw
		margin 0 0 0.25em 0
		padding 0
		line-height 1.02
		& span
			font-weight Bold
			letter-spacing 0

	&-subTitle
		color white
		font-weight Light
		padding 0
		margin 0
		font-size 1.8rem

	&--fullscreen
		height 100vh
