.Checkbox
	position relative
	&-input
		opacity 0
		position absolute
		z-index 1
		top 50%
		transform translateY(-50%)
	&-label
		padding 0 0 0 1.5em
		cursor pointer
		display inline-block

	&-box
		display block
		height .888em
		width .888em
		position absolute
		left 0
		border 1px solid #e5e5e5
		border-radius 10%
		top 50%
		transform translateY(-50%)
		color transparent
		z-index 0
		~/-input:checked ~ &
			color blue

	&-tick
		height 70%
		width 70%
		margin 15%
		fill currentColor
