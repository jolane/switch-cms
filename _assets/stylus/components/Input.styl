input-height = 2em
left-padding = 1em
bg-color = #f6f6f6
.Input
	margin-top 1em
	width 100%
	height input-height
	background-color bg-color
	position relative

	&-label
		position absolute
		z-index 0
		top 0
		left left-padding
		height input-height
		line-height input-height
		display block
		padding 0
		margin 0
		font-size 1em
		background-color transparent
		opacity .75
		transition all .2s
		~/.is-populated &
		*:focus + &
			top -.7em
			line-height .6em
			font-size .6em
			left (left-padding * 1.6)

	&-field
		box-sizing border-box
		width 100%
		margin 0
		padding 0
		text-indent 0
		padding 0 0 0 left-padding
		position relative
		z-index 1
		height input-height
		line-height input-height
		background-color transparent
		font-size 1em
		border none
		appearance none

	&--textarea
		height 6em
