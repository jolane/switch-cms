.OurProducts
	background-color dark_blue
	color white
	padding 2rem 0
	&-container
		@extend .Container

	&-heading
		font-weight Light
		text-align center
		font-size 3.75rem
		margin 0

	&-subHeading
		font-weight Bold
		text-align center
		font-size 1.5rem
		margin 0



	&-product
		width 40%
		display inline-block
		margin-right 5%
		font-size 1rem
		line-height 1.5
		margin-bottom 5rem

	&-title
		font-size 1.5em
		font-weight Bold
		color white
		margin-top 1em

	&-icon
		height 3em
		width 3em
		position relative

	&-desc
		margin-bottom 2rem
