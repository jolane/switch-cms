.WhySwitch
	width 100%
	background-image url(../images/why-bg.jpg)
	background-position top left
	background-size 90%
	background-repeat no-repeat
	padding 8em 0
	font-size 15px

	&-content
		width 100%
		padding 0 8% 0 37%


	&-heading
		font-weight Light
		color black
		font-size 3.75em
		line-height 1
		margin 0 0 0.2em 0


	&-subHeading
		font-weight Light
		color black
		font-size 2.5em
		line-height 1
		margin 0 0 1em 0
		color dark_blue

	&-list
		padding 0 0 1em 0

	&-item
		position relative
		padding 0 0 0 6.5vw
		list-style-type none
		margin 0 0 1em 0

	&-icon
		height 5vw
		width 5vw
		position absolute
		left 0
		top 50%
		margin-top -2.5vw


	&-title
		font-weight bold
		font-size 1.5rem
		margin 0 0 0.2em 0

	&-desc
		font-size 0.9rem
		margin 0
		color gray
		line-height 1.5
