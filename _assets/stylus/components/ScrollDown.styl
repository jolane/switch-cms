.ScrollDown
	height 6.75em
	width 1.5em
	position absolute
	bottom 1em
	left 50%
	transform translateX(-50%)
	z-index 2
	font-size 12px
	&:after
		content ''
		display block
		height 4px
		width 4px
		background-color white
		border-radius 50%
		position absolute
		top 0
		left 50%
		transform translateX(-50%)
	&:before
		content ''
		display block
		width 0
		height 4.7em
		border-left 1px dashed rgba(255,255,255,0.8)
		position absolute
		left 50%
		top 0
		transform translateX(-50%)

	&-mouse
		width 100%
		height 2.25em
		box-sizing border-box
		border 2px solid white
		border-radius 1.125em
		position absolute
		left 0
		top 1em
		&:after
			content ''
			display block
			width 0.2em
			height 0.56em
			background-color white
			border-radius 1.5px
			position absolute
			left 50%
			top 0.3em
			transform translateX(-50%)

	&-arrows
		position absolute
		bottom 0
		left 0
		width 100%
		text-align center
	&-arrow
		width 0.5em
		height 0.5em
		display block
		border-top 1px solid white
		border-right 1px solid white
		transform rotate(135deg)
		position relative
		margin 0 auto 0.1em auto
