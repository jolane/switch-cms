.Nav
	padding 0
	margin 0
	display flex
	flex-direction row
	height 100%

	&-item
		position relative
		height 100%
		list-style-type none
		display inline-block
		font-weight Book
		font-size 0.875rem
		margin 0 1.5em
		color white
		&:first-child
			margin-left 0
		&:last-child
			margin-right 0
		&.is-active:after
			content ''
			display block
			height 3px
			width 140%
			background-color blue
			position absolute
			top 0
			left -20%

	&-link
		height 100%
		display flex
		flex-direction column
		justify-content center
		text-decoration none
